<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true">

	<com.google.android.material.appbar.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="256dp"
			android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
			android:fitsSystemWindows="true"
			app:elevation="0dp"
			android:id="@+id/app_bar">

		<com.google.android.material.appbar.CollapsingToolbarLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:layout_scrollFlags="scroll|exitUntilCollapsed"
				android:fitsSystemWindows="true"
				android:minHeight="?attr/actionBarSize"
				app:contentScrim="#FAFAFA">

			<ImageView
					android:id="@+id/nanum_image"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scaleType="centerCrop"
					android:fitsSystemWindows="true"
					app:layout_collapseMode="parallax"
					android:src="@mipmap/ic_launcher"
					android:foreground="@drawable/nanum_detail_gradient"/>

			<androidx.appcompat.widget.Toolbar
					android:id="@+id/toolbar"
					android:layout_width="match_parent"
					android:layout_height="?attr/actionBarSize"
					app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
					app:layout_collapseMode="pin">

				<ImageButton
						android:id="@+id/back_btn"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="24dp"
						android:backgroundTint="@color/colorPrimary"
						android:background="@drawable/ic_keyboard_arrow_left"/>
			</androidx.appcompat.widget.Toolbar>
		</com.google.android.material.appbar.CollapsingToolbarLayout>
	</com.google.android.material.appbar.AppBarLayout>

	<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			android:fillViewport="true"
			android:id="@+id/scroll_view">

		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

			<TextView android:id="@+id/title_tv"
			          android:layout_width="0dp"
			          android:layout_height="wrap_content"
			          android:text="타이틀"
			          android:textSize="18sp"
			          android:textStyle="bold"
			          android:textColor="#5C5A61"
			          app:layout_constraintEnd_toStartOf="@+id/guideline2"
			          app:layout_constraintStart_toStartOf="@+id/guideline3"
			          app:layout_constraintTop_toTopOf="@+id/guideline4"/>

			<androidx.cardview.widget.CardView
					android:id="@+id/card1"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					app:layout_constraintTop_toBottomOf="@+id/title_tv"
					app:layout_constraintEnd_toStartOf="@+id/guideline1"
					app:layout_constraintStart_toStartOf="@+id/guideline3">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:paddingTop="23dp"
						android:paddingBottom="23dp"
						android:paddingStart="16dp"
						android:paddingEnd="16dp">

					<LinearLayout
							android:id="@+id/price_layout"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							app:layout_constraintTop_toTopOf="parent"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent">

						<TextView android:layout_width="0dp"
						          android:layout_height="wrap_content"
						          android:layout_weight="0.2"
						          android:text="가격"
						          android:textSize="12sp"
						          android:textStyle="bold"
						          android:textColor="#5C5A61"/>

						<TextView android:id="@+id/price_tv"
						          android:layout_width="0dp"
						          android:layout_height="wrap_content"
						          android:layout_weight="0.8"
						          android:text="20,000원"
						          android:textSize="12sp"
						          android:textColor="#FF5722"
						          android:paddingStart="12dp"
						          android:paddingEnd="12dp"/>
					</LinearLayout>

					<LinearLayout
							android:id="@+id/pay_at_layout"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:layout_marginTop="26dp"
							app:layout_constraintTop_toBottomOf="@+id/price_layout"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent">

						<TextView android:id="@+id/first_pay_at_tv"
						          android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:text="선불"
						          android:textSize="12sp"
						          android:textColor="#5C5A61"/>

						<TextView android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:text=" / "
						          android:textSize="12sp"
						          android:textStyle="bold"
						          android:textColor="#5C5A61"/>

						<TextView android:id="@+id/latter_pay_at_tv"
						          android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:text="후불"
						          android:textSize="12sp"
						          android:textColor="#5C5A61"
						          tools:ignore="RtlHardcoded,RtlSymmetry"/>
					</LinearLayout>

					<LinearLayout
							android:id="@+id/expiry_layout"
							android:layout_width="0dp"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:layout_marginTop="26dp"
							app:layout_constraintTop_toBottomOf="@+id/pay_at_layout"
							app:layout_constraintEnd_toEndOf="parent"
							app:layout_constraintStart_toStartOf="parent">

						<TextView android:layout_width="0dp"
						          android:layout_height="wrap_content"
						          android:layout_weight="0.2"
						          android:text="남은 기간"
						          android:textSize="12sp"
						          android:textStyle="bold"
						          android:textColor="#5C5A61"/>

						<TextView android:id="@+id/expiry_tv"
						          android:layout_width="0dp"
						          android:layout_height="wrap_content"
						          android:layout_weight="0.8"
						          android:text="20일"
						          android:textSize="12sp"
						          android:textColor="#FF5722"
						          android:paddingStart="12dp"
						          android:paddingEnd="12dp"/>
					</LinearLayout>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
					android:id="@+id/card2"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					app:layout_constraintTop_toBottomOf="@+id/card1"
					app:layout_constraintEnd_toStartOf="@+id/guideline1"
					app:layout_constraintStart_toStartOf="@+id/guideline3">

				<LinearLayout android:layout_width="wrap_content"
				              android:layout_height="wrap_content"
				              android:paddingTop="23dp"
				              android:paddingBottom="23dp"
				              android:paddingStart="16dp"
				              android:paddingEnd="16dp">
					<TextView
							android:id="@+id/description_tv"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="이것은 우리나라의 국기인 태극기 일러스트입니다.
어쩌구 저쩌구등등의 이야기를 이곳에 적으시면 됩니다.
20,000원에 팔 생각입니다."
							android:textSize="12sp"
							android:textColor="#5C5A61"
							app:layout_constraintTop_toBottomOf="@+id/card1"
							app:layout_constraintEnd_toStartOf="@+id/guideline1"
							app:layout_constraintStart_toStartOf="@+id/guideline3"/>
				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<LinearLayout
					android:id="@+id/state_layout"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginTop="32dp"
					app:layout_constraintTop_toBottomOf="@+id/card2"
					app:layout_constraintEnd_toStartOf="@+id/guideline1"
					app:layout_constraintStart_toStartOf="@+id/guideline3">

				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:text="진행 진도"
				          android:textSize="12sp"
				          android:textStyle="bold"
				          android:textColor="#5C5A61"/>

				<LinearLayout android:layout_width="match_parent"
				              android:layout_height="wrap_content"
				              android:orientation="horizontal"
				              android:gravity="center"
				              android:layout_marginTop="42dp">

					<LinearLayout android:layout_width="0dp"
					              android:layout_height="wrap_content"
					              android:layout_weight="0.25"
					              android:gravity="center"
					              android:orientation="vertical"
					              android:layout_marginBottom="2dp">

						<CheckBox
								android:id="@+id/recruiting_check"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:button="@drawable/toggle"
								android:clickable="false"/>

						<TextView android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:layout_marginTop="8dp"
						          android:textSize="12sp"
						          android:textStyle="bold"
						          android:textColor="#5C5A61"
						          android:gravity="center"
						          android:text="모집중"/>
					</LinearLayout>


					<LinearLayout android:layout_width="wrap_content"
					              android:layout_height="wrap_content"
					              android:layout_gravity="bottom">

						<ImageView android:layout_width="wrap_content"
						           android:layout_height="wrap_content"
						           android:src="@drawable/ic_more_horiz"/>
					</LinearLayout>

					<LinearLayout android:layout_width="0dp"
					              android:layout_height="wrap_content"
					              android:layout_weight="0.25"
					              android:gravity="center"
					              android:orientation="vertical"
					              android:layout_marginBottom="2dp">

						<CheckBox
								android:id="@+id/paid_check"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:button="@drawable/toggle"
								android:clickable="false"/>

						<TextView android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:layout_marginTop="8dp"
						          android:textSize="12sp"
						          android:textStyle="bold"
						          android:textColor="#5C5A61"
						          android:gravity="center"
						          android:text="결제 완료"/>
					</LinearLayout>

					<LinearLayout android:layout_width="wrap_content"
					              android:layout_height="wrap_content"
					              android:layout_gravity="bottom">

						<ImageView android:layout_width="wrap_content"
						           android:layout_height="wrap_content"
						           android:src="@drawable/ic_more_horiz"/>
					</LinearLayout>

					<LinearLayout android:layout_width="0dp"
					              android:layout_height="wrap_content"
					              android:layout_weight="0.25"
					              android:gravity="center"
					              android:orientation="vertical"
					              android:layout_marginBottom="2dp">

						<CheckBox
								android:id="@+id/processing_check"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:button="@drawable/toggle"
								android:clickable="false"/>

						<TextView android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:layout_marginTop="8dp"
						          android:textSize="12sp"
						          android:textStyle="bold"
						          android:textColor="#5C5A61"
						          android:gravity="center"
						          android:text="진행중"/>
					</LinearLayout>

					<LinearLayout android:layout_width="wrap_content"
					              android:layout_height="wrap_content"
					              android:layout_gravity="bottom">

						<ImageView android:layout_width="wrap_content"
						           android:layout_height="wrap_content"

						           android:src="@drawable/ic_more_horiz"/>
					</LinearLayout>

					<LinearLayout android:layout_width="0dp"
					              android:layout_height="wrap_content"
					              android:layout_weight="0.25"
					              android:gravity="center"
					              android:orientation="vertical"
					              android:layout_marginBottom="2dp">

						<CheckBox
								android:id="@+id/done_check"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:button="@drawable/toggle"
								android:clickable="false"/>

						<TextView android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:layout_marginTop="8dp"
						          android:textSize="12sp"
						          android:textStyle="bold"
						          android:textColor="#5C5A61"
						          android:gravity="center"
						          android:text="완료"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<androidx.cardview.widget.CardView
					android:id="@+id/card3"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="26dp"
					app:layout_constraintTop_toBottomOf="@+id/state_layout"
					app:layout_constraintEnd_toStartOf="@+id/guideline1"
					app:layout_constraintStart_toStartOf="@+id/guideline3"
					app:layout_constraintBottom_toTopOf="@+id/join_btn">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical"
						android:paddingTop="14dp"
						android:paddingStart="16dp"
						android:paddingEnd="16dp"
						android:paddingBottom="14dp">

					<TextView android:layout_width="match_parent"
					          android:layout_height="wrap_content"
					          android:text="공유자 정보"
					          android:textSize="12sp"
					          android:textStyle="bold"
					          android:textColor="#5C5A61"/>

					<LinearLayout android:layout_width="match_parent"
					              android:layout_height="wrap_content"
					              android:orientation="horizontal">

						<LinearLayout
								android:id="@+id/room_number_layout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:layout_marginTop="12dp"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintEnd_toEndOf="parent"
								app:layout_constraintStart_toStartOf="parent">

							<TextView android:layout_width="0dp"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.2"
							          android:text="방 번호"
							          android:textSize="10sp"
							          android:textStyle="bold"
							          android:textColor="#5C5A61"/>

							<TextView android:id="@+id/room_number_tv"
							          android:layout_width="0dp"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.8"
							          android:text="1006호"
							          android:textSize="10sp"
							          android:textStyle="normal"
							          android:textColor="#5C5A61"
							          android:paddingStart="16dp"
							          android:paddingEnd="16dp"
							          tools:ignore="RtlHardcoded,RtlSymmetry"/>
						</LinearLayout>
					</LinearLayout>

					<LinearLayout android:layout_width="match_parent"
					              android:layout_height="wrap_content"
					              android:orientation="horizontal">

						<LinearLayout
								android:id="@+id/name_layout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:layout_marginTop="12dp"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintEnd_toEndOf="parent"
								app:layout_constraintStart_toStartOf="parent">

							<TextView android:layout_width="0dp"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.2"
							          android:text="이름"
							          android:textSize="10sp"
							          android:textStyle="bold"
							          android:textColor="#5C5A61"/>

							<TextView android:id="@+id/name_tv"
							          android:layout_width="0dp"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.8"
							          android:text="홍길동"
							          android:textSize="10sp"
							          android:textStyle="normal"
							          android:textColor="#5C5A61"
							          android:paddingStart="16dp"
							          android:paddingEnd="16dp"
							          tools:ignore="RtlHardcoded,RtlSymmetry"/>
						</LinearLayout>
					</LinearLayout>

					<LinearLayout android:layout_width="match_parent"
					              android:layout_height="wrap_content"
					              android:orientation="horizontal">

						<LinearLayout
								android:id="@+id/phone_number_layout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:layout_marginTop="12dp"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintEnd_toEndOf="parent"
								app:layout_constraintStart_toStartOf="parent">

							<TextView android:layout_width="0dp"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.2"
							          android:text="전화번호"
							          android:textSize="10sp"
							          android:textStyle="bold"
							          android:textColor="#5C5A61"/>

							<TextView android:id="@+id/phone_number_tv"
							          android:layout_width="0dp"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.8"
							          android:text="01012345678"
							          android:textSize="10sp"
							          android:textStyle="normal"
							          android:textColor="#5C5A61"
							          android:paddingStart="16dp"
							          android:paddingEnd="16dp"
							          tools:ignore="RtlHardcoded,RtlSymmetry"/>
						</LinearLayout>
					</LinearLayout>

					<LinearLayout android:layout_width="match_parent"
					              android:layout_height="wrap_content"
					              android:orientation="horizontal">

						<LinearLayout
								android:id="@+id/bank_layout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:layout_marginTop="12dp"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintEnd_toEndOf="parent"
								app:layout_constraintStart_toStartOf="parent">

							<TextView android:layout_width="0dp"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.2"
							          android:text="계좌번호"
							          android:textSize="10sp"
							          android:textStyle="bold"
							          android:textColor="#5C5A61"/>

							<TextView android:id="@+id/bank_tv"
							          android:layout_width="0dp"
							          android:layout_height="wrap_content"
							          android:layout_weight="0.8"
							          android:text="3333091072946 카카오뱅크"
							          android:textSize="10sp"
							          android:textStyle="normal"
							          android:textColor="#5C5A61"
							          android:paddingStart="16dp"
							          android:paddingEnd="16dp"
							          tools:ignore="RtlHardcoded,RtlSymmetry"/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<ImageView android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:src="@drawable/ic_star_border"
			           app:layout_constraintEnd_toStartOf="@+id/guideline1"
			           app:layout_constraintTop_toTopOf="@+id/guideline4"
			           android:id="@+id/star_btn"/>

			<com.google.android.material.button.MaterialButton
					style="@style/Widget.AppCompat.Button.Colored"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:backgroundTint="#8C807D"
					android:textColor="#FFFFFF"
					android:layout_marginTop="26dp"
					android:layout_marginBottom="24dp"
					android:paddingBottom="16dp"
					android:paddingTop="16dp"
					android:text="참여"
					app:layout_constraintTop_toBottomOf="@+id/card3"
					app:layout_constraintEnd_toStartOf="@+id/guideline1"
					app:layout_constraintStart_toStartOf="@+id/guideline3"
					app:layout_constraintBottom_toBottomOf="parent"
					android:id="@+id/join_btn"/>

			<androidx.constraintlayout.widget.Guideline
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/guideline1"
					android:orientation="vertical"
					app:layout_constraintGuide_percent="0.9"/>

			<androidx.constraintlayout.widget.Guideline
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/guideline2"
					android:orientation="vertical"
					app:layout_constraintGuide_percent="0.8"/>


			<androidx.constraintlayout.widget.Guideline
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/guideline3"
					android:orientation="vertical"
					app:layout_constraintGuide_percent="0.08"/>

			<androidx.constraintlayout.widget.Guideline
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/guideline4"
					android:orientation="horizontal"
					app:layout_constraintGuide_percent="0.04"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>